{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-6"></div>
		<div class="col-md-6">
			<form class="contact-form">
				<div class="mb-3">
					<label for="name-container" class="form-label">Nom</label>
					<input type="text" class="form-control" id="name-container" placeholder="">
				</div>
				<div class="mb-3">
					<label for="email-container" class="form-label">Email</label>
					<input type="email" class="form-control" id="email-container" placeholder="name@example.com">
				</div>
				<div class="mb-3">
					<label for="phone-container" class="form-label">Numéro de téléphone</label>
					<input type="phone" class="form-control" id="phone-container" placeholder="">
				</div>
				<div class="mb-3">
					<label for="message-container" class="form-label">Message</label>
					<textarea class="form-control" id="message-container" rows="4"></textarea>
				</div>
				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="exampleCheck1">
					<label class="form-check-label" for="exampleCheck1">Vive la CNIL</label>
				</div>
				<button type="submit" class="btn btn-primary">Envoyer</button>
			</form>
		</div>
	</div>
{% endblock %}
